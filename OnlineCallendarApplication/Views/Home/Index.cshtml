@model IEnumerable<Callendar.Data.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date_Hour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collaborators)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Hour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Collaborators)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                <a asp-action="Edit">Edit this event</a> |
                <a asp-action="Delete" asp-route-id="@item.Event_ID">Delete this event</a>
            </td>
        </tr>
}
    </tbody>
</table>
