@model Callendar.Data.Event

@{
    ViewData["Title"] = "Edit event";
}

<style>
    /* set a style for the buttons */
    input[type=submit] 
    {
        background-color: yellowgreen;
        color: white;
        padding: 10px 18px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: auto;
    }

    /* set styles for the inputs of the login form */
    input 
    {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        box-sizing: border-box;
        border: 1px solid white;
    }

    /* set border and background colour to the form */
    form 
    {
        border: 3px solid white;
        background-color: white;
    }

    /* set a hover effect for the button */
    input[type=submit]:hover 
    {
        opacity: 0.8;
    }

    /* style rules for the body of the page */
    body 
    {
        background-color: steelblue;
    }

    /* the whole page has the same font */
    * 
    {
        font-family: candara;
        font-size: 20px;
    }

    /* styling rules for hyperlinks */
    a 
    {
        font-size: 18px;
        color: white;
    }

    /* h1 tags have special styling */
    h1
    {
        font-size: 22px;
        color: white;
    }

    /* set padding to the container */
    .container 
    {
        padding: 16px;
    }
</style>
<h1>Edit this event:</h1>
<div class="row">
    <div class="col-md-4">
        <form action="https://localhost:44394/Home/Update_Event" method="post">
            <div class="container">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Event_ID" />
                <div class="form-group">
                    <label asp-for="Date_Hour" class="control-label"></label>
                    <input asp-for="Date_Hour" class="form-control" name="date-hour" />
                    <span asp-validation-for="Date_Hour" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Collaborators" class="control-label"></label>
                    <input asp-for="Collaborators" class="form-control" id="collaborators" name="collaborators" />
                    <span asp-validation-for="Collaborators" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Duration" class="control-label"></label>
                    <input asp-for="Duration" name="duration" min="1" max="8" class="form-control" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" onclick="return edit_message()" value="Save changes" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Go back to your callendar</a>
</div>
<script>
    // function that runs before a specific event is going to be updated
    function edit_message() {
        var r = confirm("Are you sure you want to update this event?");

        if (r == true) {
            return true; // event is going to be updated
        }
        else {
            return false; // event is not being updated
        }
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
