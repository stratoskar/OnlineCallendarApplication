@model Callendar.Data.Event

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form action="https://localhost:44394/Home/Update_Event"  method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Event_ID" />
            <div class="form-group">
                <label asp-for="Date_Hour" class="control-label"></label>
                <input asp-for="Date_Hour" class="form-control" name="date-hour"/>
                <span asp-validation-for="Date_Hour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Collaborators" class="control-label"></label>
                <input asp-for="Collaborators" class="form-control" name="collaborators"/>
                <span asp-validation-for="Collaborators" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" min="1" class="form-control" name="duration"/>
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
